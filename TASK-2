        "Correct_password= \"admin123\"\n",
        "attempts = 0\n",
        "while attempts < 3:\n",
        "    password = input(\"Enter password: \")\n",
        "    if password == Correct_password:\n",
        "        print(\"Access granted\")\n",
        "        break\n",
        "    else:\n",
        "        print(\"Incorrect password\")\n",
        "        attempts += 1\n",
